{
  "name": "main-app",
  "version": "0.1.0",
  "jest": {
    "collectCoverageFrom": [
      "src/***/**/*.{js,jsx}",
      "!src/registerServiceWorker.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  },
  "private": true,
  "dependencies": {
    "axios": "^0.17.1",
    "dotenv": "^4.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "history": "^4.7.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-helmet": "^5.2.0",
    "react-html-parser": "^2.0.2",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-router-modal": "^1.3.0",
    "react-router-redux": "^5.0.0-alpha.9",
    "react-scripts": "1.0.17",
    "react-share": "^1.19.0",
    "react-test-renderer": "^16.2.0",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.2.3",
    "moxios": "^0.4.0",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^4.1.1",
    "redux-mock-store": "^1.4.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "npm-run-all build:css build:js",
    "build:js": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "coverage": "react-scripts test --env=jsdom --coverage",
    "eject": "react-scripts eject",
    "watch:sass": "node-sass src/sass/main.scss src/index.css -w",
    "compile:sass": "node-sass src/sass/main.scss public/css/style.comp.css",
    "prefix:css":
      "postcss --use autoprefixer -b 'last 10 versions' public/css/style.comp.css -o  public/css/style.prefix.css",
    "compress:css":
      "node-sass public/css/style.prefix.css src/index.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  }
}
